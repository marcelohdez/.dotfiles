# Marcelo's Sway Config!
include /etc/sway/config.d/*

# Key vars
set $mod Mod4
set $specialMod $mod+Shift
set $left H
set $up K
set $down J
set $right L

# Long-running processes
exec /usr/libexec/polkit-gnome-authentication-agent-1
exec stacki3
exec swayidle -w
exec gammastep
exec swww init && systemctl restart --user darkman
exec kdeconnect-indicator
# stop swaybg from running
swaybg_command -

# Output
set $sideMonitor 'ViewSonic Corporation VA2055 Series UD2192060091'
set $mainMon 'LG Electronics MP59G 0x00009FF3'
output $sideMonitor scale 1.25 pos 0 100
output $mainMon pos 1536 0
output eDP-1 scale 1.75
output * adaptive_sync on

# Input
input "1452:641:Apple_Internal_Keyboard_/_Trackpad" {
  pointer_accel 0.6
}

input type:touchpad {
  tap_button_map lrm
  natural_scroll on
  click_method clickfinger
  drag enabled
}

gaps inner 6
smart_gaps on
smart_borders on

# Program vars
set $calculator gnome-calculator
set $files nautilus
set $search wofi
set $term foot
set $web firefox
set $webPriv firefox --private-window

# window rules
#                tabbrdr border  text    
client.focused   #ffffff #a5a5a5 #ffffff #454545
client.unfocused #ffffff #454545 #ffffff #454545
floating_maximum_size 1200 x 800
focus_follows_mouse always
default_border pixel 2

set $confDir ~/.config/sway/
include $confDir/keybinds.conf
include $confDir/winrules.conf
