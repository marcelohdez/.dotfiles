# Marcelo's Sway Config!
include /etc/sway/config.d/*

# Key vars (shared with all config files)
set $mod Mod4
set $specialMod $mod+Shift
set $left H
set $up K
set $down J
set $right L

# Program vars (shared with all config files)
set $calculator gnome-calculator
set $files thunar
set $search fuzzel
set $term foot
set $web firefox
set $webPriv firefox --private-window

# Long-running processes
exec /usr/libexec/polkit-gnome-authentication-agent-1
exec autotiling
exec gammastep
exec kdeconnect-indicator
exec swayidle -w
exec waybar
exec 'swww init; pgrep darkman && systemctl --user restart darkman'
exec wl-paste -w ~/.local/share/fn-scripts/clipboard_write.sh
# stop swaybg from running
swaybg_command -

# Output
set $sideMonitor 'ViewSonic Corporation VA2055 Series UD2192060091'
set $mainMon 'LG Electronics MP59G 0x00009FF3'
output $sideMonitor scale 1.25 pos 0 100
output $mainMon pos 1536 0
output eDP-1 scale 1.72
output * adaptive_sync on

# Input
input type:touchpad {
  tap_button_map lrm
  natural_scroll on
  click_method clickfinger
  drag enabled
}

input "1452:641:Apple_Internal_Keyboard_/_Trackpad" {
  pointer_accel 0.6
  scroll_factor 0.5
}

gaps inner 6
smart_gaps on
smart_borders on

# window rules
#                         tabbrdr border  text    split
client.focused            #ffffff #8f8f8f #ffffff #8f8f8f
client.focused_inactive   #ffffff #2b2b2b #ffffff #2b2b2b
client.unfocused          #ffffff #2b2b2b #ffffff #2b2b2b
floating_maximum_size 1400 x 850
focus_on_window_activation focus
focus_follows_mouse always

default_border pixel 2
#titlebar_padding 4 1

set $confDir ~/.config/sway/
include $confDir/keybinds
include $confDir/windowrules
