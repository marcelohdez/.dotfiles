# Marcelo's Sway Config!
include /etc/sway/config.d/*

# Key vars (shared with all config files)
set $mod Mod4
set $specialMod $mod+Shift
set $left H
set $up K
set $down J
set $right L

# Program vars (shared with all config files)
set $calculator gnome-calculator
set $files foot ranger
set $search fuzzel
set $term foot
set $web firefox
set $webPriv firefox --private-window

# Long-running processes
exec /usr/libexec/polkit-gnome-authentication-agent-1
exec '/usr/libexec/sway-contrib/inactive-windows-transparency.py -o 0.92'
exec ~/.local/share/fn-scripts/auto_brightness.sh
exec 'wlsunset -s 21:00 -S 8:00'
exec kanshi
exec kdeconnect-indicator
exec 'swayidle -w'
exec waybar
exec 'wl-paste -w ~/.local/share/fn-scripts/clipboard_write.sh'
exec '~/.local/share/fn-scripts/battery_watch.sh BAT1 -e'
# set up correct theme
set $setupTheme ~/.local/share/fn-scripts/theme_setup.sh
set $startDarkman systemctl --user restart darkman
exec 'pgrep darkman && $startDarkman || $setupTheme'

# Output
set $sideMon 'LG Electronics MP59G 0x00039DF3'
set $mainMon 'Dell Inc. AW2724DM 7TLZHV3'
set $fw13 'BOE 0x0BCA Unknown'
# positioning handled by kanshi
output $mainMon mode 2560x1440@180Hz
output $fw13 scale 1.5
output * adaptive_sync on

workspace 1   output eDP-1 $mainMon
workspace 2   output eDP-1 $mainMon
workspace 3   output $mainMon
workspace 4   output $mainMon
workspace 5   output $mainMon
workspace 6   output $mainMon
workspace 7   output $mainMon
workspace 8   output $mainMon
workspace 9   output $sideMon
workspace 10  output $sideMon

# Input
seat seat0 hide_cursor 5000
input type:touchpad {
  tap_button_map lrm
  natural_scroll on
  click_method clickfinger
  drag disabled
  tap enabled
}

input "2362:628:PIXA3854:00_093A:0274_Touchpad" {
  pointer_accel 0.2
  scroll_factor 0.6
}

gaps inner 6
smart_gaps on
smart_borders on
default_border pixel 2
floating_maximum_size 1440 x 900
focus_follows_mouse always
titlebar_padding 4 2

primary_selection disabled

set $confDir ~/.config/sway/
include $confDir/keybinds
include $confDir/windowrules
